<?xml version="1.0" encoding="utf-8"?>
<com.kfgame.sdk.view.NormalLoginView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <com.kfgame.sdk.view.BaseSdkBgLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <com.kfgame.sdk.view.WarningLinearLayout
            android:id="@+id/account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/vsgm_tony_white_border_bg_transparent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#A0808080"
                android:padding="5dp"
                android:src="@drawable/vsgm_tony_icon_account" />

            <EditText
                android:id="@+id/account_edit"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入账号"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textEmailAddress"
                android:paddingLeft="12dp"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textColorHint="#909090"
                android:textSize="16dp" />
        </com.kfgame.sdk.view.WarningLinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.kfgame.sdk.view.WarningLinearLayout
                android:id="@+id/passwd_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/vsgm_tony_white_border_bg_transparent"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="#A0808080"
                    android:padding="5dp"
                    android:src="@drawable/vsgm_tony_icon_passwd" />

                <EditText
                    android:id="@+id/passwd_edit"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPassword"
                    android:paddingLeft="12dp"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textColorHint="#909090"
                    android:textSize="16dp" />
            </com.kfgame.sdk.view.WarningLinearLayout>

            <ImageView
                android:id="@+id/btnLoginViewForgetPw"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/vsgm_tony_selector_btn_fgp"
                android:visibility="gone" />
        </RelativeLayout>

        <com.kfgame.sdk.view.SdkTipsTextView
            android:id="@+id/tv_account_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/vsgm_tony_selector_orange_round"
            android:gravity="center"
            android:padding="8dp"
            android:text="登陆"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btnQuickLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/vsgm_tony_selector_white_round_border"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:layout_marginRight="4dp"
                android:text="游客登陆"
                android:textColor="@android:color/black"
                android:textSize="14dp" />
            
            <LinearLayout
	            android:id="@+id/ll_account_register"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:background="@drawable/vsgm_tony_selector_white_round_border"
	            android:gravity="center"
	            android:orientation="horizontal"
	            android:paddingBottom="4dp"
	            android:paddingLeft="8dp"
	            android:paddingRight="8dp"
	            android:paddingTop="4dp" >
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:gravity="center"
	                android:text="手机注册"
	                android:textColor="@android:color/black"
	                android:textSize="14dp" />
        	</LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/btnLoginViewThirdLogin1"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/kfgame_login_weixin" />

                <ImageView
                    android:id="@+id/btnLoginViewThirdLogin2"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/kfgame_login_qq" />

            </LinearLayout>
        </LinearLayout>
    </com.kfgame.sdk.view.BaseSdkBgLinearLayout>

</com.kfgame.sdk.view.NormalLoginView>